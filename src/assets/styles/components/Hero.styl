.hero
   width 100%
   max-width 1920px
   // position absolute
   &__background-device
      position absolute
      visibility hidden
      width 100vw
      display flex
      align-items center
   &__background
      max-width 1920px
      max-height: 826px
      width 100%
      position absolute
      visibility visible
      height 43vw
      display flex
      align-items center
      background-position center top
   &__title
      // position absolute
      // padding-top 15%
      // padding-left 42.5%
      // max-width 17.4%
      // z-index 2
      margin-left auto
      margin-right auto
      margin-top auto
      margin-bottom auto
      padding-top 60px
   
   @media (max-width: 1023px)
      padding-top 0px
      position absolute
      width: 100%
      &__background
         visibility hidden
      &__background-device
         height 710px
         visibility visible
         background-position center top
         background-size percentage(4)
         &:before
            content ''
            position absolute
            top 0
            bottom 0
            left 0
            right 0
            background-color rgba(0,0,0,0.5)
      &__logo
         filter hue-rotate(435deg) brightness(1390%)
         z-index 6
         width 162px
         margin-left auto
         margin-right auto
      &__title
         visibility hidden